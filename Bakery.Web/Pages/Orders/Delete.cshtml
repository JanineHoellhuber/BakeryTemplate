@page
@model DeleteModel
@{
  ViewData["Title"] = "Bestellung löschen";
}

<h1>Bestellung löschen</h1>

<h3>Diese Bestellung wirklich löschen?</h3>
<div>

  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Bestellnummer
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.OrderNr)
    </dd>
    <dt class="col-sm-2">
      Datum
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.Date)
    </dd>
    <dt class="col-sm-2">
      Kunde
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.CustomerName)
    </dd>
  </dl>

  <form asp-action="Delete">
    

    <input type="submit" value="Löschen" class="btn btn-danger" /> |
    

  </form>
</div>
